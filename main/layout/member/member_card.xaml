<UserControl x:Class="main.layout.member.member_card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:main.layout.member"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="LightBlue">
        <StackPanel >
            <Image Height="100" Width="100" Source="{Binding imgSrc}"/>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding name}"/>
                <TextBlock Text="{Binding address}"/>
                <TextBlock Text="{Binding email}"/>
                <TextBlock Text="{Binding phone}"/>
                <TextBlock Text="{Binding bookNumber}"/>
                <TextBlock Text="{Binding overDue}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
