<UserControl x:Class="main.layout.Member"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.36*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.63*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="32" Background="White" Margin="16,26,0,0">
                <Grid Height="418">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="192*"/>
                        <RowDefinition Height="17*"/>
                    </Grid.RowDefinitions>
                    <Border Padding="38,27">
                        <StackPanel Orientation="Vertical">

                            <TextBlock
                              Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                              Text="Wellcome to" />

                            <TextBlock
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                              Text="Library management system" Padding="0,0,0,24" />
                            <Button Height="71" Margin="0,0,0,25" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBlock FontSize="28" FontStyle="Normal" FontWeight="SemiBold"  Text="Home"/>
                            </Button>
                            <Button Height="71" Margin="0,0,0,25" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBlock FontSize="28" FontStyle="Normal" FontWeight="SemiBold"  Text="Book"/>
                            </Button>
                            <Button Height="71" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBlock FontSize="28" FontStyle="Normal" FontWeight="SemiBold"  Text="Member"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="1" CornerRadius="32" Background="White" Margin="0,16,0,0">
                <Grid>
                    <Border Padding="38 27">
                        <StackPanel Orientation="Vertical">
                            <Button Height="71" Margin="0,0,0,25" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBlock FontSize="28" FontStyle="Normal" FontWeight="SemiBold"  Text="Active member"/>
                            </Button>
                            <Button Height="71" Margin="0,0,0,25" materialDesign:ButtonAssist.CornerRadius="10">
                                <TextBlock FontSize="28" FontStyle="Normal" FontWeight="SemiBold"  Text="Block member"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="1"  Margin="18,26,45,0" Background="LightBlue" >
            <Grid  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.RowSpan="2">
                    <AccessText Text="row1"/>
                </Grid>

                <Grid Grid.Row="2">

                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" Text="Total active member: xxx/1000 " VerticalAlignment="Bottom"/>
                        <Button DockPanel.Dock="Right" Margin="0,0,36,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="MaterialDesignOutlinedButton"
                        Content="Add new member" />
                    </DockPanel>

                </Grid>
                <ListView Grid.Row="3" x:Name="memberListv" ItemsSource="{Binding memberList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1100"/>

                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Column="0">

                                    <Image Height="100" Width="100" Source="{Binding imgSrc}" Margin="14,0,24,0"/>

                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="18"/>
                                            </Style>
                                        </StackPanel.Resources>


                                        <TextBlock Text="{Binding name}" FontWeight="Bold" FontSize="24" />


                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Address: "/>
                                            <TextBlock Text="{Binding address}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Email: "/>
                                            <TextBlock Text="{Binding email}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="               Phone: "/>
                                                <TextBlock Text="{Binding phone}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Book borrowed: "/>
                                            <TextBlock Text="{Binding bookNumber}"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="           Overdue: "/>
                                                <TextBlock Text="{Binding overDue}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>

                                <StackPanel Orientation="Vertical" Grid.Column="1" >
                                    <Button Background="#ffcc00" Width="140" Height="auto" Padding="10" BorderThickness="0" FontSize="24"  Margin="0,0,0,12">
                                        <TextBlock
                                      Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                      Text="Edit" />
                                    </Button>
                                    <Button Background="#cc3300" Width="auto" Height="auto" Padding="10" BorderThickness="0" FontSize="24" Margin="0,0,0,12">
                                        <TextBlock
                                      Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                      Text="Delete" />
                                    </Button>
                                    <Button Background="Black" Width="auto" Height="auto" Padding="10" BorderThickness="0" FontSize="24" Margin="0,0,0,12">
                                        <TextBlock
                                      Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                      Text="Block" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </Border>
    </Grid>
</UserControl>
