<UserControl x:Class="main.layout.member.component.notification_success"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:main.layout.member.component"
             mc:Ignorable="d" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
              
             d:DesignHeight="313" d:DesignWidth="967">
    <Border CornerRadius="13" Background="White">
    <StackPanel Orientation="Vertical" Margin="50,38">
        <StackPanel Orientation="Horizontal">
            <Image Source="/main;component/assests/img_confirm.png" Width="144" Height="130"/>

            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="SemiBold" FontSize="32" Text="Add member success." HorizontalAlignment="Stretch"/>
                <TextBlock FontSize="32" Text="Member ID:b1mn2b321gh31h2j"/>
            </StackPanel>
        </StackPanel>
        <DockPanel LastChildFill="False" Margin="0,40,0,0">
            <Button
                            DockPanel.Dock="Right"
                            materialDesign:ButtonAssist.CornerRadius="14"
                            Height="66"
                            Width="202"
                            Background="Gray"
               Margin="12,0,0,0"
                            ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                <TextBlock Text="CANCEL" FontSize="28" />
            </Button>
            <Button
                            DockPanel.Dock="Right"
                           Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            materialDesign:ButtonAssist.CornerRadius="14"
                            Height="66"
                            Width="202"
                            Background="Green"
                           
                            ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                <TextBlock Text="OK" FontSize="28" />
            </Button>

        </DockPanel>
    </StackPanel>
    </Border>
</UserControl>
